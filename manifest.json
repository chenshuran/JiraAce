{
  "manifest_version": 3,
  "name": "JiraAce",
  "version": "1.0",
  "description": "Help you to improve Jira operation efficiency",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://jira.ringcentral.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://jira.ringcentral.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 